# Build stage
FROM python:3.12-slim-bookworm AS builder

# 配置容器内的代理环境变量（让apt-get使用VPN代理）
ENV http_proxy=http://host.docker.internal:1082
ENV https_proxy=http://host.docker.internal:1082
ENV HTTP_PROXY=http://host.docker.internal:1082
ENV HTTPS_PROXY=http://host.docker.internal:1082

# Copy local installation scripts (使用VPN访问官方源)
COPY downloads/node-setup.sh /tmp/node-setup.sh
COPY downloads/uv-install.sh /tmp/uv-install.sh

# Copy pre-downloaded .deb packages to avoid network issues
COPY downloads/debs/*.deb /tmp/debs/

# Install system dependencies required for building certain Python packages
# Add Node.js 20.x LTS for building frontend
# 只安装make和patch（纯工具，无依赖），其他全部让apt-get处理
RUN apt-get update && apt-get upgrade -y && \
    dpkg -i /tmp/debs/make_*.deb /tmp/debs/patch_*.deb || true && \
    apt-get install -y --fix-missing -f \
    gcc g++ git \
    curl \
    && bash /tmp/node-setup.sh \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/* /tmp/debs

# 构建完成后清除代理配置（避免影响运行时）
ENV http_proxy=
ENV https_proxy=
ENV HTTP_PROXY=
ENV HTTPS_PROXY=

# Install uv using the local installation script (避免ghcr.io访问问题)
# UV 0.9.11+安装路径已改为/root/.local/bin
RUN sh /tmp/uv-install.sh && \
    mv /root/.local/bin/uv /usr/local/bin/ && \
    mv /root/.local/bin/uvx /usr/local/bin/

# Set build optimization environment variables
ENV MAKEFLAGS="-j$(nproc)"
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy

# Set the working directory in the container to /app
WORKDIR /app

# Copy dependency files and minimal package structure first for better layer caching
COPY pyproject.toml uv.lock ./
COPY open_notebook/__init__.py ./open_notebook/__init__.py

# Install dependencies with optimizations (this layer will be cached unless dependencies change)
RUN uv sync --frozen --no-dev

# Copy the rest of the application code
COPY . /app

# Install frontend dependencies and build
WORKDIR /app/frontend
RUN npm ci
# 清理Next.js缓存以避免路径解析问题
RUN rm -rf .next node_modules/.cache
RUN npm run build

# Return to app root
WORKDIR /app

# Runtime stage
FROM python:3.12-slim-bookworm AS runtime

# 配置容器内的代理环境变量（让apt-get使用VPN代理）
ENV http_proxy=http://host.docker.internal:1082
ENV https_proxy=http://host.docker.internal:1082
ENV HTTP_PROXY=http://host.docker.internal:1082
ENV HTTPS_PROXY=http://host.docker.internal:1082

# Copy local installation scripts (使用VPN访问官方源)
COPY downloads/node-setup.sh /tmp/node-setup.sh
COPY downloads/uv-install.sh /tmp/uv-install.sh

# Copy pre-downloaded .deb packages to avoid network issues
COPY downloads/debs/*.deb /tmp/debs/

# Install runtime system dependencies including curl for SurrealDB installation
# Add Node.js 20.x LTS for running frontend
# 只安装纯库（libexpat1, libnghttp2-14），supervisor让apt-get处理
RUN apt-get update && apt-get upgrade -y && \
    dpkg -i /tmp/debs/libexpat1_*.deb /tmp/debs/libnghttp2-14_*.deb || true && \
    apt-get install -y --fix-missing -f \
    ffmpeg \
    supervisor \
    curl \
    && bash /tmp/node-setup.sh \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/* /tmp/debs

# 构建完成后清除代理配置（避免影响运行时）
ENV http_proxy=
ENV https_proxy=
ENV HTTP_PROXY=
ENV HTTPS_PROXY=

# Install SurrealDB
RUN curl --proto '=https' --tlsv1.2 -sSf https://install.surrealdb.com | sh

# Install uv using the local installation script (避免ghcr.io访问问题)
# UV 0.9.11+安装路径已改为/root/.local/bin
RUN sh /tmp/uv-install.sh && \
    mv /root/.local/bin/uv /usr/local/bin/ && \
    mv /root/.local/bin/uvx /usr/local/bin/

# Set the working directory in the container to /app
WORKDIR /app

# Copy the virtual environment from builder stage
COPY --from=builder /app/.venv /app/.venv

# Copy the application code
COPY --from=builder /app /app

# Copy built frontend from builder stage
COPY --from=builder /app/frontend/.next/standalone /app/frontend/
COPY --from=builder /app/frontend/.next/static /app/frontend/.next/static
COPY --from=builder /app/frontend/public /app/frontend/public

# Create directories for data persistence
RUN mkdir -p /app/data /mydata

# Expose ports for Frontend and API
EXPOSE 8502 5055

# Copy single-container supervisord configuration
COPY supervisord.single.conf /etc/supervisor/conf.d/supervisord.conf

# Create log directories
RUN mkdir -p /var/log/supervisor

# Runtime API URL Configuration
# The API_URL environment variable can be set at container runtime to configure
# where the frontend should connect to the API. This allows the same Docker image
# to work in different deployment scenarios without rebuilding.
#
# If not set, the system will auto-detect based on incoming requests.
# Set API_URL when using reverse proxies or custom domains.
#
# Example: docker run -e API_URL=https://your-domain.com/api ...

CMD ["/usr/bin/supervisord", "-c", "/etc/supervisor/conf.d/supervisord.conf"]